<div class="row">
  <div class="col-md-4">
      <h1 class="text-primary">New product</h1>

      <form
        class="d-flex flex-column gap-3 mb-4"
        id="product-form"
      >
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            class="form-control"
            id="name"
            name="name"
            placeholder="Calculator"
          />
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <input
            type="text"
            class="form-control"
            id="price"
            name="price"
            placeholder="125.50"
          />
        </div>

        <div class="form-group">
          <label for="image">Image url</label>
          <input
            type="text"
            class="form-control"
            id="image"
            name="image"
            placeholder="https://static.toiimg.com/photo/msid-75503669,width-96,height-65.cms"
          />
        </div>

        <button type="submit" class="btn btn-success me-auto px-4">
          Send
        </button>
      </form>
  </div>

    <div class="col d-none d-md-block"></div>

  <div class="col-md-7">
      <h1 class="text-primary">View of products</h1>

      {{#if productsExist}}
        <div class="alert alert-warning" role="alert">
          No products found
        </div>

      {{else}}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Name</th>
              <th scope="col">Price</th>
              <th scope="col">Image</th>
            </tr>
          </thead>

          <tbody>
            {{#each products}}
              {{> product-item product=this}}
            {{/each}}
          </tbody>
        </table>
      {{/if}}
  </div>

  <hr>

  <div class="col-12 mt-4">
    <h1 class="text-primary">Message center</h1>

    <div class="form-group">
      <label for="email">User email</label>
      <input
        type="text"
        class="form-control"
        id="email"
        name="email"
        placeholder="example@test.com"
      />
    </div>

    <hr>

    <div class="mb-4">
      <div id="message-container">
        {{#each messages}}
          {{> message msg=this}}
        {{/each}}
      </div>
    </div>

    <form class="d-flex gap-2" id="message-form">
      <div class="form-group">
        <input
          type="text"
          class="form-control"
          name="message"
          placeholder="Write a message"
        />
      </div>

      <button class="btn btn-success">Submit</button>
    </form>
  </div>
</div>