<div class="row">
  <div class="col-md-6 mx-auto text-align-center">
    <h1 class="text-primary mb-4">User Login</h1>

    <form class="w-100" action="/login" method="POST">
      <div class="form-group mb-2">
        <label for="name">Enter your name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Your name"
        />
      </div>

      <button type="submit" class="btn btn-success me-auto px-4">
        Send
      </button>
    </form>
  </div>
</div>